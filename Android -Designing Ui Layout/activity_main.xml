<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="firstapp.jalayeri.net.uiproject.ActivityMain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.33"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <LinearLayout
            android:background="#a40003"
            android:layout_weight="0.50"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <LinearLayout
            android:background="#00819e"
            android:layout_weight="0.50"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.33"
        android:layout_height="0dp">
        <LinearLayout
            android:background="#9f9f9f"
            android:layout_weight="0.50"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#a40003"
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </LinearLayout>
            <LinearLayout
                android:background="#00819e"
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </LinearLayout>
            <LinearLayout
                android:background="#00711a"
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#1e1e1e"
            android:layout_weight="0.50"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#99a400"
                android:layout_weight="0.50"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>
            <LinearLayout
                android:background="#8a00a3"
                android:layout_weight="0.50"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_weight="0.50"
            android:layout_height="0dp">

        </LinearLayout>
        <LinearLayout
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_weight="0.50"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <LinearLayout
                android:background="#222222"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="match_parent">

            </LinearLayout>
            <LinearLayout
                android:background="#640000"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="match_parent">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
